<% title 'Edit Posts' %>
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th></th>
  </tr>
<% @posts.each do |post| %>
  <tr>
      <td><%= post.title %></td>
      <td>By <%= post.user.settings.first_name %></td>
      <td><%= link_to 'Edit', edit_admin_post_path(post.id) %></td>
  </tr>
<% end %>
</table>